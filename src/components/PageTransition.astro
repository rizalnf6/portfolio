// src/components/PageTransition.astro
---

<div id="page-loader" class="fixed inset-0 bg-white dark:bg-gray-900 z-50 flex items-center justify-center">
    <div class="animate-spin rounded-full h-16 w-16 border-t-4 border-b-4 border-primary-600"></div>
  </div>
  
  <script>
    document.addEventListener('DOMContentLoaded', () => {
      const loader = document.getElementById('page-loader');
      
      // Hide loader after the page is fully loaded
      window.addEventListener('load', () => {
        loader.classList.add('opacity-0');
        
        // Remove from DOM after transition
        setTimeout(() => {
          loader.style.display = 'none';
        }, 300);
      });
    });
  </script>
  
  <style>
    #page-loader {
      transition: opacity 0.3s ease;
    }
  </style>