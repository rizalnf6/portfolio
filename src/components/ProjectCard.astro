---
// src/components/ProjectCard.astro
export interface Props {
  title: string;
  description: string;
  image: string;
  link: string;
  tags?: string[];
}

const { title, description, image, link, tags = [] } = Astro.props;
---

<div class="bg-gray-50 rounded-lg p-6 hover:shadow-md transition-shadow">
  <a href={link}>
    <img src={image} alt={title} class="w-full aspect-video object-cover rounded-md mb-4" 
         onerror="this.src='/images/placeholder.jpg';">
  </a>
  <h3 class="text-xl font-semibold mb-2">{title}</h3>
  <p class="text-gray-600 mb-4">{description}</p>
  
  {tags.length > 0 && (
    <div class="flex flex-wrap gap-2 mb-4">
      {tags.map((tag) => (
        <span class="bg-gray-200 text-gray-700 px-2 py-1 rounded-md text-sm">{tag}</span>
      ))}
    </div>
  )}
  
  <a href={link} class="text-indigo-600 font-semibold hover:underline">View details â†’</a>
</div>